<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'>

  <ui:with field="i18n" type="org.kie.workbench.common.screens.projecteditor.client.resources.i18n.ProjectEditorConstants"/>

  <gwt:HorizontalPanel>

    <gwt:VerticalPanel>
      <bootstrap:Heading size="H3" text='{i18n.Packages}'/>
      <gwt:ScrollPanel>
        <gwt:ListBox ui:field="availablePackages" visibleItemCount="30" width="150px"/>
      </gwt:ScrollPanel>
    </gwt:VerticalPanel>

    <bootstrap:Button ui:field="addButton" icon="ARROW_RIGHT"/>

    <gwt:VerticalPanel>
      <bootstrap:Heading size="H3" text='{i18n.WhiteList}'/>
      <gwt:ScrollPanel>
        <gwt:ListBox ui:field="whiteList" visibleItemCount="30" width="150px"/>
      </gwt:ScrollPanel>
    </gwt:VerticalPanel>
  </gwt:HorizontalPanel>

</ui:UiBinder>
